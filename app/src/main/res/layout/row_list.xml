<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_home"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_margin="15dp"
        app:cardElevation="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/checkbox_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        

        android:text="coisas"


        android:layout_marginStart="250dp"

        app:layout_constraintTop_toTopOf="@id/cardView_home"
        app:layout_constraintStart_toStartOf="@id/cardView_home"
        app:layout_constraintEnd_toEndOf="@id/cardView_home"
        app:layout_constraintBottom_toBottomOf="@id/cardView_home"

        />

</androidx.constraintlayout.widget.ConstraintLayout>